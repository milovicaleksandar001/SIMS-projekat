<Window x:Class="Booking.WPF.Views.Guide.ShowDescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Description" Height="400" Width="300"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
         Background="#D6E6F2">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="25,15,0,0" FontSize="15" TextWrapping="Wrap" VerticalAlignment="Top" Height=" 350" Width="250" Text="{Binding DescriptionTB}"/>
    </Grid>
</Window>
