<Page x:Class="Booking.WPF.Views.Guest1.RenovationApproval"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Booking.WPF.Views.Guest1"
      xmlns:ns="clr-namespace:Booking.Localization"
      mc:Ignorable="d" 
      d:DesignHeight="150" d:DesignWidth="300"
      Title="RenovationApproval">
    
    <Grid >
        <Border  BorderThickness="1" BorderBrush="Black" CornerRadius="10" Background="LightBlue">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <Label Content="{ns:Loc RenovationApproval}" FontSize="15" FontWeight="Bold"></Label>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="{ns:Loc Yes}" Margin="20" FontWeight="Bold" FontSize="18" Height="35" Width="50" Command="{Binding ButtonClickYes}" Background="LightGreen"></Button>
                    <Button Content="{ns:Loc No}" Margin="20" FontWeight="Bold" FontSize="18" Height="35" Width="50"   Command="{Binding ButtonClickNo}" Background="LightCoral"></Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Page>
